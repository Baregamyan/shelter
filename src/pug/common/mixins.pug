mixin card(data, isSlide)
  li.card(class=isSlide ? 'swiper-slide' : null)
    h3.card__name #{data.name}
    +picture(data.img, 'card__photo')
    a.button.card__more-link(href=data.href) Learn more

mixin nav(options, modClass='')
  nav.nav(class=`nav--${modClass}` aria-label=nav.aria.label aria-hidden="true")
    .nav__wrapper
      ul.nav__list
        each item in options.list
          li.nav__item
            if (data.href===item.href)
              a.nav__link(class="nav__link--active" href=item.href) #{item.name}
            else
              a.nav__link(href=data.main ? item.href : (item.isUnique ? `/${item.href}` : item.href)) #{item.name}

mixin picture(data, className)
  picture
    source(type="image/webp" srcset=`images/${data.name}.webp 1x, images/${data.name}@2x.webp 2x`)
    img(class=className srcset=`images/${data.name}@2x.${data.format}` src=`images/${data.name}.${data.format}` alt=data.alt width=data.width height=data.height)
